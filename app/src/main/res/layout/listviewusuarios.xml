<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/titulonom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtNombre"
        android:layout_toRightOf="@id/titulonom"
        android:layout_alignBaseline="@id/titulonom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="20dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/titulocorreo"
        android:layout_below="@id/titulonom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView

        android:id="@+id/txtCorreo"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/titulocorreo"
        android:layout_alignBaseline="@id/titulocorreo"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="20dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/titulogrupo"
        android:layout_below="@id/titulocorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo:"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtGrupo"
        android:layout_toRightOf="@id/titulogrupo"
        android:layout_alignBaseline="@id/titulogrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="grupito"
        android:textSize="20dp"
        />
</RelativeLayout>